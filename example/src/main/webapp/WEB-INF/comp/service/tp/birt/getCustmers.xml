<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="getCustomers"
	moduleName="birt"
	dbAccessType="readOnly"
	description="Example service that extract rows from a table/view based on filtering criterion" 
>
<inputData>
	<inputRecords>
		<!-- 
			specify the record name with purpose as filter. Client is expected to follow filter-field convention
			e.g. {"customerNumber":123, "customerOperator":"><", "customerNumberTo" : 345} will select all customer with id between 123 and 456
		 -->
		<inputRecord recordName="birt.customer" purpose="filter"/>
	</inputRecords>
</inputData>

<actions>
<!-- filter action extracts rows based on filtering criterion. -->
	<filter filterRecordName="birt.customer" outputSheetName="customers" />
</actions>

<!--  remember, reading is different from output. Only fields/sheets specified in output are sent to client -->
<outputData fieldNames="txt">
	<outputRecords>
		<outputRecord sheetName="customers"/>
	</outputRecords>
</outputData>
</service>
