<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="saveBlob"
	moduleName="tutorial"
	dbAccessType="readWrite"
	description=""
>
	<!-- attachmentField specification directs Simplity to access the blob from 
		temp storage and save it to permanent storage. field blobExternal would contain 
		the key to temp-storage, and Simplity replaces this value with the key to 
		permanent storage so that the save operation saves this key to rdbms 
	-->
	<inputData attachmentFields="blobEsternal">
		<inputRecords>
			<inputRecord
				recordName="tutorial.blobTest"
				purpose="save" />
		</inputRecords>
	</inputData>
	<actions>
		<save
			saveAction="add"
			recordName="tutorial.blobTest"
		></save>
	</actions>
</service>
