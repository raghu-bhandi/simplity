<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="createSheet"
	moduleName="tutorial"
	dbAccessType="none"
	description="example service to create a data sheet"
>
	<actions>
		<!-- creating a field that can be used to demonstrate hot use run-time 
			value in createSheet action -->
		<setValue
			fieldName="dateField"
			fieldValue="/2015-01-31/" />
		<!-- we have to ensure that each row has exactly same number of cells, 
			and each column has data of same value type across all rows. Otherwise a 
			run-time error is raised -->
		<createSheet
			sheetName="list"
			data="text,int,decimal,date,bool;first row first column text,  1, 1.1, /2016-12-31/,true;secondrow,2,2.2, $dateField, true" />
			<log names="list"/>
	</actions>
	<outputData>
		<outputRecords>
			<outputRecord sheetName="list" />
		</outputRecords>
	</outputData>
</service>
