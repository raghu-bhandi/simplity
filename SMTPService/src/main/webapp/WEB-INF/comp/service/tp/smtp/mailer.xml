<?xml version="1.0" encoding="UTF-8"?>
<service dbAccessType="readWrite" 
		 moduleName="smtp" 
		 name="mailer"
		 xmlns="http://www.simplity.org/schema">
<inputData attachmentFields="filekey">
	<inputFields>	
		<inputField dataType="_text" name="toIds"/>
		<inputField dataType="_text" name="ccIds"/>
		<inputField dataType="_text" name="bccIds"/>
		<inputField dataType="_text" name="subject"/>
		<inputField dataType="_text" name="content"/>
		<inputField dataType="_text" name="filekey"/>
		<inputField dataType="_text" name="filename"/>
		<inputField dataType="_text" name="filetype"/>
		<inputField dataType="_text" name="filesize"/>		
	</inputFields>
</inputData>
	
<actions>
	<logic actionName="sendmail" className="com.infosys.qreuse.smtpservice.Mailer"/>
	<logic actionName="audittrail" className="com.infosys.qreuse.smtpservice.AuditTrail"/>
</actions>
</service>
