<?xml version="1.0" encoding="UTF-8"?>
<service name="FileInFileOutGroupBy" 
		 moduleName="batchProcess"
		 dbAccessType="none"
		 xmlns="http://www.simplity.org/schema" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<actions>
		<batchProcessor dbAccessType="none" 
						inputFolder="${basedir}/src/test/resources/infile"
						outputFolder="${basedir}/target"
						serviceOnErrorAtRowLevel="batchProcess.batchProcessorError"
						serviceOnInvalidInput="batchProcess.batchProcessorInvalidInput">
			<batchRowProcessor>			
				<inputFile recordName="files.fixed6" fileName="txt6.txt" dataFormat="fixedWidth" />
				<outputFile recordName="files.fixed6Out" fileName="txt6out.txt" dataFormat="fixedWidth" conditionToOutput="WriteOK"/>
				<actionAfterChildren>
					<logic className="org.simplity.test.CustomGroupByAction"/>
				</actionAfterChildren>					
			</batchRowProcessor>		
		</batchProcessor>
	</actions>
</service>
