<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	moduleName="test"
	name="ldapAuth"
	dbAccessType="none">
	<inputData>
		<inputFields>
			<inputField
				dataType="_text"
				name="_userId" />
			<inputField
				dataType="_text"
				name="_userToken" />
		</inputFields>
	</inputData>
	<actions>
		<setValue
			fieldName="isAutoLogin"
			fieldValue="$_isAutoLogin"></setValue>
		<ldapAuthenticate
			credentials="$_userToken"
			principal="$_userId"
			executeOnCondition="isAutoLogin==false" />
	</actions>
	<outputData fieldNames="_userId">
	</outputData>
</service>