<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<application
	xmlns="http://www.simplity.org/schema"
	applicationId="simplityTutorial"
	sendTraceToClient="true"
	logSqls="true"
	dbVendor="h2"
	dbDriverClassName="org.h2.Driver"
	connectionString="jdbc:h2:file:${project.build.directory}/${defaultDB};user=sa;" 
	queueConnectionFactory="vm://localhost?broker.persistent=false">
	<schemaDetails>
		<schemaDetail
			schemaName="TESTSCHEMA"
			connectionString="jdbc:h2:file:${project.build.directory}/${anotherDB};user=sa;" />
	</schemaDetails>	
	<ldapProperties
		factory="org.simplity.test.mock.ldap.MockInitialDirContextFactory"
		principal="winner"
		credentials="pwd"
		authentication="Simple"
		ldapurl="ldap://XXX:XXX:XX:XX:3268/"/>
	<mailProperties host="mockserver.com" port="25" />
	
</application>