<database>
  <table name="departments">
    <column size="4" name="dept_no" type="CHAR" primaryKey="true"/>
    <column size="40" name="dept_name" type="VARCHAR" required="true"/>
  </table>
  <table name="dept_emp">
    <column name="emp_no" type="INTEGER" primaryKey="true"/>
    <column size="4" name="dept_no" type="CHAR" primaryKey="true"/>
    <column name="from_date" type="DATE" required="true"/>
    <column name="to_date" type="DATE" required="true"/>
    <foreign-key foreignTable="employees">
      <reference local="emp_no" foreign="emp_no"/>
    </foreign-key>
    <foreign-key foreignTable="departments">
      <reference local="dept_no" foreign="dept_no"/>
    </foreign-key>
  </table>
  <table name="dept_manager">
    <column size="4" name="dept_no" type="CHAR" primaryKey="true"/>
    <column name="emp_no" type="INTEGER" primaryKey="true"/>
    <column name="from_date" type="DATE" required="true"/>
    <column name="to_date" type="DATE" required="true"/>
    <foreign-key foreignTable="departments">
      <reference local="dept_no" foreign="dept_no"/>
    </foreign-key>
    <foreign-key foreignTable="employees">
      <reference local="emp_no" foreign="emp_no"/>
    </foreign-key>
  </table>
  <table name="employees">
    <column name="emp_no" type="INTEGER" primaryKey="true"/>
    <column name="birth_date" type="DATE" required="true"/>
    <column size="14" name="first_name" type="VARCHAR" required="true"/>
    <column size="16" name="last_name" type="VARCHAR" required="true"/>
    <column size="2" name="gender" type="CHAR" required="true"/>
    <column name="hire_date" type="DATE" required="true"/>
  </table>
  <table name="salaries">
    <column name="emp_no" type="INTEGER" primaryKey="true"/>
    <column name="salary" type="INTEGER" required="true"/>
    <column name="from_date" type="DATE" primaryKey="true"/>
    <column name="to_date" type="DATE" required="true"/>
    <foreign-key foreignTable="employees">
      <reference local="emp_no" foreign="emp_no"/>
    </foreign-key>
  </table>
  <table name="titles">
    <column name="emp_no" type="INTEGER" primaryKey="true"/>
    <column size="50" name="title" type="VARCHAR" primaryKey="true"/>
    <column name="from_date" type="DATE" primaryKey="true"/>
    <column name="to_date" type="DATE"/>
    <foreign-key foreignTable="employees">
      <reference local="emp_no" foreign="emp_no"/>
    </foreign-key>
  </table>
</database>
