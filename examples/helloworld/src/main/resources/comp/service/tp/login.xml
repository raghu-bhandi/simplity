<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="login"
	dbAccessType="none"
>
	<inputData>
		<inputFields>
			<inputField
				dataType="_text"
				name="userId" />
			<inputField
				dataType="_text"
				name="userToken" />
		</inputFields>
	</inputData>
	<actions>
		<ldapAuthenticate
			actionName="authenticate"
			credentials="$password"
			principal="$username" executeOnCondition="!_isAutoLogin"/>
	</actions>
	<outputData fieldNames="_userId">
	</outputData>
</service>