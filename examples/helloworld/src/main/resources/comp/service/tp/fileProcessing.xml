<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="fileProcessing"
	dbAccessType="none"
>
	<actions>
		<setValue fieldName="inputfilename" fieldValue="txt01.txt"></setValue>
		<createSheet sheetName="collect" recordName="fixed"/>
		<fileProcessor
			inFolderName="${basedir}/infile"
			inFileNamePattern="$inputfilename"
			inDataFormat="fixedWidth"
			inRecordName="fixed"
			outFolderName="${basedir}/outfile"
			outFileName="{name}.{ext}"
			outDataFormat="fixedWidth"
			outRecordName="fixed"					
		>
		<actionOnInvalidInputRow>
				<subService serviceName="processErrorRow"/>
		</actionOnInvalidInputRow>
		<actionOnErrorWhileProcessing>
			<subService serviceName="processErrorRow"/>
		</actionOnErrorWhileProcessing>
			<actions>
				<subService serviceName="insertRows"/>
			</actions>
		</fileProcessor>
	</actions>
	<outputData dataSheets="collect"></outputData>
</service>