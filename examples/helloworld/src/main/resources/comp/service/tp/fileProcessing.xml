<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="fileProcessing"
	dbAccessType="none"
>
	<actions>
		<fileProcessor
			inFolderName="${basedir}/infile"
			inFileNamePattern="txt01.txt"
			inDataFormat="fixedWidth"
			inRecordName="hello"
			outFolderName="${basedir}/outfile"
			outFileName="{name}.{ext}"
			outDataFormat="fixedWidth"
			outRecordName="adios"
			renameInFileTo="{name}.{ext}.bak"						
		>
		<actionOnInvalidInputRow>
			<log actionName="invalidInputRow" names="errorRow,error"/>
		</actionOnInvalidInputRow>
		<actionOnErrorWhileProcessing>
			<log actionName="invalidprocessing" names="errorRow,error"/>
		</actionOnErrorWhileProcessing>
		<actions>
			<log actionName="allOK" names="greeting,id"/>
		</actions>
		</fileProcessor>
	</actions>
	<outputData fieldNames="farewell">
	</outputData>
</service>