<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="fileProcessing"
	dbAccessType="none"
>
	<actions>
		<fileProcessor
			inDataFormat="text"
			inFileNamePattern="txt01.txt"
			inFolderName="${basedir}/infile"
			inRecordName="hello"
			archivalExtension=".bak"
			inSheetName="readfile"
			outFolderName="${basedir}/outfile"
			outRecordName="adios"
			outSheetName="farewell"			
		>
			<actions>
				<loop dataSheetName="readfile" columnsToCopyAsFields="*">				
					<actions>
						<setValue fieldName="farewell" fieldValue="adios"></setValue>
						<addRow sheetName="farewell"/>
						<log names="farewell"/>
					</actions>
				</loop>
			</actions>
		</fileProcessor>
	</actions>
	<outputData dataSheets="farewell"></outputData>
</service>