<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="fileProcessing"
	dbAccessType="none"
>
	<actions>

		<fileProcessor
			inFolderName="${basedir}/infile"
			inFileNamePattern="txt01.txt"
			inDataFormat="fixedWidth"
			inRecordName="hello"

			outFolderName="${basedir}/outfile"
			outFileName="{name}.{ext}"
			outDataFormat="fixedWidth"
			outRecordName="adios"

			renameInFileTo="{name}.{ext}.bak"
		>
			<actions>
				<setValue
					fieldName="farewell"
					fieldValue="adios" />
				<log
					actionName="log123"
					names="farewell" />
			</actions>
		</fileProcessor>
	</actions>
</service>