<?xml version="1.0" encoding="UTF-8"?>
<service name="batchProcessor" 
		 moduleName="batchProcess"
		 xmlns="http://www.simplity.org/schema" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<actions>
		<batchProcessor dbAccessType="none" 
						inputFolder="${basedir}/infile"
						outputFolder="${basedir}/outfile"
						serviceOnErrorAtRowLevel="batchProcessError"
						serviceOnInvalidInput="batchProcessInvalidInput"
						>
			<batchRowProcessor>
				<inputFile recordName="files.fixed" fileName="batchIn.txt" dataFormat="fixedWidth"/>
				<childProcessors>
					<batchRowProcessor inputSql="">
						<aggregators>
							<aggregator aggregationType="averge" outputFieldName="" inputFieldName=""/>
						</aggregators>
					</batchRowProcessor>
				</childProcessors>
				<outputFile recordName="" fileName="" dataFormat="fixedWidth"/>
			</batchRowProcessor>		
		</batchProcessor>
	</actions>
</service>
